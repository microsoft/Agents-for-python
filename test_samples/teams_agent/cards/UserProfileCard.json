{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "${imageUri}",
                            "style": "Person",
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${displayName}"
                        },
                        {
                            "type": "Container",
                            "spacing": "Small",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${toUpper(jobTitle)}",
                                    "spacing": "Small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${mail}",
                                    "spacing": "None"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${givenName}",
                                    "spacing": "None"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${surname}",
                                    "spacing": "None"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
    
}